---
import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";

interface Props{
    src: string | ImageMetadata;
    alt: string ;
}

const { src, alt } = Astro.props;

const image = await getImage({
    src: src,
    format: "jpg",
    width: 400,
    height: 400,
});
---
<picture>
    <img src={ image.src } alt={ alt } />
</picture>