---
import type { CollectionEntry } from 'astro:content';
import BaseHead from "../components/BaseHead.astro"
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"

type Props = CollectionEntry<'myself'>['data'];
const { title, date, tags, cover,coverAlt } = Astro.props;
console.log('-- title --');
console.log(title);
---
<!doctype html>
<html lang="es">
	<head>
		<BaseHead />
	</head>
	<body>
		<Header/>
		<main>
			<article>
				<img  src={ cover } alt={ coverAlt } class="cover" />
				<div class="container">	
					<h2>{ title }</h2>
					<div>
						<h4>{ date }</h4>
						{ tags.map( (tag : string) => (
							<div>
								<h4>{ tag }</h4>
							</div>
						)) }
					</div>
					<hr />
					<slot/>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
	.cover{
		width: 100%;
		height: 50vh;
	}
</style>	